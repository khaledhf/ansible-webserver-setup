[DEFAULT]
bantime = 3600
findtime = 600
maxretry = 3

[nginx-req-limit]
enabled = true
filter = nginx-req-limit
action = iptables-multiport[name=ReqLimit, port=http,https]
logpath = /var/log/nginx/error.log
findtime = 600
bantime = 7200
maxretry = 10

[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/auth.log
maxretry = 3
bantime = 3600 